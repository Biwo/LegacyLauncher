				android:title="@string/pref_title_page_horizontal_margin"
				android:summary="@string/pref_summary_page_horizontal_margin"
				android:dialogMessage="@string/pref_dialog_page_horizontal_margin"
				android:key="pageHorizontalMargin" android:defaultValue="20"
				android:max="75" />
			<PreferenceCategory android:title="@string/pref_title_drawer_layout_category">
				<com.wordpress.chislonchow.legacylauncher.ui.DialogSeekBarPreference
					android:title="@string/pref_title_drawer_columns_portrait"
					android:summary="@string/pref_summary_drawer_columns_portrait"
					android:dialogMessage="@string/pref_dialog_drawer_columns_portrait"
					android:key="drawerColumnsPortrait" android:defaultValue="@integer/config_drawer_columns_portrait"
					android:max="5" />
				<com.wordpress.chislonchow.legacylauncher.ui.DialogSeekBarPreference
					android:title="@string/pref_title_drawer_rows_portrait"
					android:summary="@string/pref_summary_drawer_rows_portrait"
					android:dialogMessage="@string/pref_dialog_drawer_rows_portrait"
					android:key="drawerRowsPortrait" android:defaultValue="@integer/config_drawer_rows_portrait"
					android:max="5" />
				<com.wordpress.chislonchow.legacylauncher.ui.DialogSeekBarPreference
					android:title="@string/pref_title_drawer_columns_landscape"
					android:summary="@string/pref_summary_drawer_columns_landscape"
					android:dialogMessage="@string/pref_dialog_drawer_columns_landscape"
					android:key="drawerColumnsLandscape" android:defaultValue="@integer/config_drawer_columns_landscape"
					android:max="7" />
				<com.wordpress.chislonchow.legacylauncher.ui.DialogSeekBarPreference
					android:title="@string/pref_title_drawer_rows_landscape"
					android:summary="@string/pref_summary_drawer_rows_landscape"
					android:dialogMessage="@string/pref_dialog_drawer_rows_landscape"
					android:key="drawerRowsLandscape" android:defaultValue="@integer/config_drawer_rows_landscape"
					android:max="4" />
			</PreferenceCategory>
			<PreferenceCategory
				android:title="@string/pref_title_drawer_functionality_category">
				<com.wordpress.chislonchow.legacylauncher.ui.DialogSeekBarPreference
					android:title="@string/pref_title_drawer_scrolling_speed"
					android:summary="@string/pref_summary_drawer_scrolling_speed"
					android:dialogMessage="@string/pref_dialog_drawer_scrolling_speed"
					android:key="drawerSpeed" android:defaultValue="@integer/config_drawer_speed"
					android:max="1000" />
				<CheckBoxPreference android:key="drawerOvershoot"
					android:title="@string/pref_title_drawer_overshoot"
					android:summary="@string/pref_summary_drawer_overshoot"
					android:defaultValue="@bool/config_drawer_overshoot" />
				<com.wordpress.chislonchow.legacylauncher.ui.DialogSeekBarPreference
					android:title="@string/pref_title_drawer_snap" android:summary="@string/pref_summary_drawer_snap"
					android:dialogMessage="@string/pref_dialog_drawer_snap"
					android:key="drawerSnap" android:defaultValue="@integer/config_drawer_snap"
					android:max="1000" />
			</PreferenceCategory>
		</PreferenceScreen>
		<PreferenceScreen android:key="drawerAppearancePreferences"
			android:title="@string/pref_title_drawer_appearance" android:summary="@string/pref_summary_drawer_appearance">
			<PreferenceCategory android:title="@string/pref_title_drawer_animation_category">
				<CheckBoxPreference android:title="@string/pref_title_animated_drawer"
					android:defaultValue="@bool/config_drawer_animated"
					android:summary="@string/pref_summary_animated_drawer" android:key="drawerAnimated" />
				<CheckBoxPreference android:title="@string/pref_title_animated_zoom_drawer"
					android:dependency="drawerAnimated" android:defaultValue="@bool/config_drawer_zoom"
					android:summary="@string/pref_summary_animated_zoom_drawer"
					android:key="drawerZoom" />
				<com.wordpress.chislonchow.legacylauncher.ui.DialogSeekBarPreference
					android:dependency="drawerAnimated" android:title="@string/pref_title_drawer_animation_speed"
