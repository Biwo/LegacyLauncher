			<PreferenceCategory android:title="@string/pref_title_drawer_background_category">
				<net.margaritov.preference.colorpicker.ColorPickerPreference
					android:key="drawer_color" android:title="@string/pref_title_drawer_color"
					android:summary="@string/pref_summary_drawer_color"
					android:defaultValue="@integer/config_drawer_color" alphaSlider="true" />
			</PreferenceCategory>
			<PreferenceCategory android:title="@string/pref_title_drawer_app_label_category">
				<CheckBoxPreference android:title="@string/pref_title_drawer_labels"
					android:defaultValue="@bool/config_drawer_labels" android:summary="@string/pref_summary_drawer_labels"
					android:key="drawerLabels" />
				<com.wordpress.chislonchow.legacylauncher.ui.DialogSeekBarPreference
					android:dependency="drawerLabels" android:title="@string/pref_title_drawer_label_size"
					android:summary="@string/pref_summary_drawer_label_size"
					android:dialogMessage="@string/pref_dialog_drawer_label_size"
					android:key="drawerLabelTextSize" android:defaultValue="@integer/config_drawer_label_size"
					android:max="16" />
				<CheckBoxPreference android:title="@string/pref_title_drawer_label_bold"
					android:dependency="drawerLabels" android:defaultValue="@bool/config_drawer_label_bold"
					android:summary="@string/pref_summary_drawer_label_bold"
					android:key="drawerLabelBold" />
				<CheckBoxPreference android:title="@string/pref_title_drawer_label_color_override"
					android:defaultValue="@bool/config_drawer_label_color_override"
					android:summary="@string/pref_summary_drawer_label_color_override"
					android:key="drawerLabelColorOverride" />
				<net.margaritov.preference.colorpicker.ColorPickerPreference
					android:dependency="drawerLabelColorOverride" android:key="drawerLabelColor"
					android:title="@string/pref_title_drawer_label_color"
					android:summary="@string/pref_summary_drawer_label_color"
					android:defaultValue="@integer/config_drawer_label_color"
					alphaSlider="true" />
			</PreferenceCategory>
		</PreferenceScreen>
		<PreferenceScreen android:key="drawerCatalogsPreferences"
