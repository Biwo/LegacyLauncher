				android:summary="@string/pref_summary_drawer_show_catalogs"
				android:key="drawerCatalogShow" />
		</PreferenceScreen>
	</PreferenceScreen>
	<PreferenceScreen android:key="dockPreferences"
		android:title="@string/pref_title_dock">
		<PreferenceScreen android:key="dockConfigurationPreferences"
			android:title="@string/pref_title_dock_settings" android:summary="@string/pref_summary_dock_settings">
